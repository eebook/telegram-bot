{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "removeComments": true,
    "outDir": "./dist/",
    "pretty": true,
    "lib": [
      "es6",
      "es2016",
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "dist/node_modules"
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
    ]
}
